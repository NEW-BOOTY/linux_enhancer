# Vault policy for Linux Enhancer
path "secret/data/aws" {
  capabilities = ["read", "list"]
}

path "secret/data/linux_enhancer/*" {
  capabilities = ["create", "read", "update", "delete", "list"]
}

path "sys/mounts" {
  capabilities = ["read"]
}
